<section id="contact" class="bg-[#1a1a1a] text-white py-16 px-4">
  <div class="max-w-md mx-auto">
    <h2 class="text-3xl font-bold mb-8 text-center">Get in Touch</h2>

    <form id="contactForm" class="space-y-6">
      <div class="form-group">
        <label for="name" class="sr-only">Name</label>
        <input
          type="text"
          id="name"
          name="name"
          placeholder="Your Name"
          required
          class="w-full bg-gray-800 border border-[#4CAF50] rounded-md py-2 px-4 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#4CAF50] transition duration-300"
        />
      </div>

      <div class="form-group">
        <label for="email" class="sr-only">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Your Email"
          required
          class="w-full bg-gray-800 border border-[#4CAF50] rounded-md py-2 px-4 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#4CAF50] transition duration-300"
        />
      </div>

      <div class="form-group">
        <label for="message" class="sr-only">Message</label>
        <textarea
          id="message"
          name="message"
          rows="4"
          placeholder="Your Message"
          required
          class="w-full bg-gray-800 border border-[#4CAF50] rounded-md py-2 px-4 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#4CAF50] transition duration-300"
        ></textarea>
      </div>

      <button
        type="submit"
        class="w-full bg-[#4CAF50] hover:bg-[#4caf4fc7] text-white font-bold py-2 px-4 rounded-full transition duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-[#4CAF50] focus:ring-opacity-50"
      >
        Send Message
      </button>
    </form>

    <div id="formStatus" class="mt-4 text-center hidden">
      <p class="text-[#4CAF50]">Thank you! Your message has been sent.</p>
    </div>
  </div>
</section>

<style>
  .form-group {
    position: relative;
    overflow: hidden;
  }

  .form-group::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background-color: #3b82f6; /* blue-500 */
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .form-group:focus-within::after {
    transform: scaleX(1);
  }

  input,
  textarea {
    background-color: transparent;
    position: relative;
    z-index: 1;
  }

  @keyframes shake {
    0%,
    100% {
      transform: translateX(0);
    }
    25% {
      transform: translateX(-5px);
    }
    75% {
      transform: translateX(5px);
    }
  }

  .shake {
    animation: shake 0.5s ease-in-out;
  }
</style>

<script>
  const form = document.getElementById("contactForm");
  const formStatus = document.getElementById("formStatus");

  if (form) {
    form.addEventListener("submit", (e) => {
      e.preventDefault();

      // Simulate form submission
      setTimeout(() => {
        if (formStatus) {
          formStatus.classList.remove("hidden");
        }
        (form as HTMLFormElement).reset();
      }, 1000);

      // Add shake animation to button
      const submitButton = form.querySelector('button[type="submit"]');
      if (submitButton) {
        submitButton.classList.add("shake");
        setTimeout(() => {
          submitButton.classList.remove("shake");
        }, 500);
      }
    });
  }

  // Add floating label effect
  const inputs = document.querySelectorAll("input, textarea");
  inputs.forEach((input) => {
    input.addEventListener("focus", () => {
      input.parentElement.classList.add("focused");
    });
    input.addEventListener("blur", () => {
      const inputElement = input as HTMLInputElement;
      if (inputElement.value === "") {
        input.parentElement.classList.remove("focused");
      }
    });
  });
</script>
